

<div class="container">
	<p class="alert"><%=flash[:alert] %></p>
	<h1>Login</h1>
	<%=form_tag sessions_path do %>
		<div class="field">
			<%=label_tag :email, "Email" %> <br/>
			<%=text_field_tag :email%>
		</div>
		<div class="field">
			<%=label_tag :password, "Password" %> <br/>
			<%=password_field_tag :password%>
		</div>
		<div class="actions">
		<%=submit_tag "Login"%>
		</div>

	<% end %>
</div>