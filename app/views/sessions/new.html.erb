


  <style type="text/css">

    body{
    	background-color: #26598E;
    }

    .container {
      //width: 400px;
    }

    /* The white background content wrapper */
    .container > .content {
      background-color: #fff;
      padding: 20px;
      margin: 0 20px 0 20px; 
      border-radius: 10px 10px 10px 10px;
      box-shadow: 0 1px 2px rgba(0,0,0,.15);
    }


    .login-form {
      margin-left: 50px;
      margin-right: 50px;
    }

  </style>



<div class="container" style="max-width:500px;padding-top:30px;">
	


	<div class="content">
		<p class="alert"><%=flash[:alert] %></p>
		<div class="row">
			<div class="login-form">
				<h4>今すぐログインしましょう!</h4>
				<%=form_tag sessions_path do %>
					<div class="alert alert-danger hidden" role="alert"></div>          
					<fieldset>
						<div class="clearfix">
							<!-- <input type="text" name="sfdc_user_name" placeholder="メールアドレス" class="form-control"> -->
							<%=text_field_tag :email, nil, class:"form-control", placeholder:"メールアドレス"  %>

						</div>
						<div class="clearfix">
							<%=password_field_tag :password, nil, class:"form-control", placeholder:"パスワード"  %>
						</div>
						<div class="text-right" style="margin-top:10px;">              
							<%=link_to 'サインアップ', new_user_path%>
							<%=submit_tag "ログイン", class:"btn btn-primary"%>
						</div>
					</fieldset>
				<% end %>
			</div>
		</div>
	</div>

</div>